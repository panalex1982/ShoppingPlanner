<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bue.shoppingplanner"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.bue.shoppingplanner.MainMenuActivity" 
            android:label="@string/title_activity_main_menu" 
            >            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.bue.shoppingplanner.IntroActivity"
            android:label="@string/app_name" 
            android:parentActivityName="MainMenuActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                	android:value="MainMenuActivity" />
        </activity>
        
        <activity
            android:name="com.bue.shoppingplanner.views.ShoppingListActivity"
            android:label="@string/title_activity_shopping_list"
            android:parentActivityName="MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainMenuActivity" />
        </activity>
        <activity
            android:name="com.bue.shoppingplanner.views.StatsActivity"
            android:label="@string/title_activity_stats"
            android:parentActivityName="MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bue.shoppingplanner.MainMenuActivity" />
        </activity>
        <activity
            android:name="com.bue.shoppingplanner.views.ShopsActivity"
            android:label="@string/title_activity_set_lists"
            android:parentActivityName="MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bue.shoppingplanner.MainMenuActivity" />
        </activity>
        <activity
            android:name="com.bue.shoppingplanner.views.SavedListsActivity"
            android:label="@string/title_activity_saved_lists"
            android:parentActivityName="MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bue.shoppingplanner.MainMenuActivity" />
        </activity>
        <activity
            android:name="com.bue.shoppingplanner.views.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.bue.shoppingplanner.MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bue.shoppingplanner.views.MainMenuActivity" />
        </activity>
        <activity
            android:name="com.bue.shoppingplanner.utilities.fileselector.FileSelectorActivity"
            android:label="@string/select_file"
            android:parentActivityName="com.bue.shoppingplanner.views.SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bue.shoppingplanner.views.SettingsActivity" />
        </activity>
        <activity android:name="com.bue.shoppingplanner.utilities.ScanBarcodeFragmentActivity" >
        </activity>
        <activity
            android:name="com.bue.shoppingplanner.views.DatabaseMenuActivity"
            android:label="@string/title_activity_database_menu"
            android:parentActivityName="com.bue.shoppingplanner.MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bue.shoppingplanner.views.MainMenuActivity" />
        </activity>
        <activity
            android:name="com.bue.shoppingplanner.views.ManageProductsActivity"
            android:label="@string/title_activity_manage_products"
            android:parentActivityName="com.bue.shoppingplanner.views.DatabaseMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bue.shoppingplanner.views.DatabaseMenuActivity" />
        </activity>
        <activity
            android:name="com.bue.shoppingplanner.views.ExchangeRatesActivity"
            android:label="@string/title_activity_exchange_rates"
            android:parentActivityName="com.bue.shoppingplanner.MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bue.shoppingplanner.views.MainMenuActivity" />
        </activity>
        <activity
            android:name="com.bue.shoppingplanner.views.ManageTableActivity"
            android:label="@string/title_activity_manage_buyers"
            android:parentActivityName="com.bue.shoppingplanner.views.DatabaseMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bue.shoppingplanner.views.DatabaseMenuActivity" />
        </activity>
        <activity
            android:name="com.bue.shoppingplanner.ManageProductCategoriesActivity"
            android:label="@string/title_activity_manage_product_categories"
            android:parentActivityName="com.bue.shoppingplanner.views.DatabaseMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bue.shoppingplanner.views.DatabaseMenuActivity" />
        </activity>
    </application>

</manifest>